<UserControl
    x:Class="BookstoreManagement.UI.ItemUI.EditItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookstoreManagement.UI.ItemUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center">
        <Button Command="{Binding NavigateBackCommand}">Go back</Button>
        <Label>Item Id</Label>
        <TextBox IsReadOnly="True" Text="{Binding Item.ItemId}" />

        <Label>Name</Label>
        <TextBox Text="{Binding Item.Name}" />

        <Label>Description</Label>
        <TextBox Text="{Binding Item.Description}" />

        <Label>Price</Label>
        <TextBox Text="{Binding Item.Price}" />

        <Label>Quantity</Label>
        <TextBox Text="{Binding Item.Quantity}" />

        <Button
            Command="{Binding SubmitCommand}"
            Content="{Binding SubmitButtonText}"
            IsEnabled="{Binding CanSubmit}" />
    </StackPanel>
</UserControl>
