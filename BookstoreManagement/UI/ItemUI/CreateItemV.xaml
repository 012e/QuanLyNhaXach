<UserControl
    x:Class="BookstoreManagement.UI.ItemUI.CreateItemV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookstoreManagement.UI.ItemUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Button Command="{Binding NavigateBackCommand}">Go back</Button>
        <Label>Name</Label>
        <TextBox Text="{Binding Name}" />
        <Label>Description</Label>
        <TextBox Text="{Binding Description}" />
        <Label>Price</Label>
        <TextBox Text="{Binding Price}" />
        <Label>Quantity</Label>
        <TextBox Text="{Binding Quantity}" />
        <Button Command="{Binding SubmitCommand}">Submit</Button>
    </StackPanel>
</UserControl>
