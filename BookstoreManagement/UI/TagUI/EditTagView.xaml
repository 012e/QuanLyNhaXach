<UserControl
    x:Class="BookstoreManagement.UI.TagUI.EditTagView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookstoreManagement.UI.TagUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center">
        <Button Command="{Binding GoBackCommand}">Go back</Button>
        <Label>Id</Label>
        <TextBox IsReadOnly="True" Text="{Binding Tag.TagId}" />
        <Label>Name</Label>
        <TextBox Text="{Binding Tag.Name}" />
        <Label>Description</Label>
        <TextBox Text="{Binding Tag.Description}" />
        <Button Command="{Binding SubmitItemCommand}">Submit</Button>
    </StackPanel>
</UserControl>
